@model GymManagement.Models.Membership
@{
    ViewData["Title"] = "My Plan";
    Layout = "./_LayoutMember.cshtml";
}
<h1>
    Your Plan
</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Plan Name:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.pname
        </dd>
        <dt class="col-sm-2">
            Amount:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.pamt
        </dd>
    </dl>
    <form asp-action="MakePay">
        <input type="hidden" asp-for="MembershipId" />
        <input type="submit" value="Pay" class="btn btn-primary" />
        <a asp-action="GetPlans">Back to list</a>
    </form>
</div>