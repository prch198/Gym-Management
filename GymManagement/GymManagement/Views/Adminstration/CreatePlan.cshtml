@model GymManagement.Models.Plan
@{
    ViewData["Title"] = "Create Plan";
    Layout = "./_LayoutAdmin.cshtml";
}
<h1>Create</h1>
<h4>Plan</h4>
<br />
<div class="col-md-4">
